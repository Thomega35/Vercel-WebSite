---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, POSTS } from '../../consts';
import DrawerLayout from '../../layouts/DrawerLayout.astro';

---

<!DOCTYPE html>
<html lang="en">
	<DrawerLayout>
		<head>
			<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
			<style>
				ul {
					list-style-type: none;
					padding: unset;
				}
				ul li {
					display: flex;
				}
				ul li :global(time) {
					flex: 0 0 130px;
					font-style: italic;
					color: #595959;
				}
				ul li a:visited {
					color: #8e32dc;
				}
			</style>
		</head>
		<body>
			<!-- <Header /> -->
			<main>
				<section>
					<ul>
						{
							POSTS.map((post) => (
								<li>
									<a href={`/blog/${post.slug}/`}>{post.data.title}</a>
								</li>
							))
						}
					</ul>
				</section>
			</main>
			<Footer />
		</body>
	</DrawerLayout>
</html>
